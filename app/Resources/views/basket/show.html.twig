{% extends 'base.html.twig' %}

{% block body %}
    <div class="col s12 m7">
        <h5 class="header">Résumé du panier</h5>
        <div class="card horizontal">
            <div class="card-stacked">
                <div class="card-content">
                    <p> {{ basket.description }}<span class="new badge  red" data-badge-caption=" TVA"><b>{{ tva }} %</b></span></p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
            <div class="col s12">
                <table class="centered">
                    <thead>
                    <tr class="teal lighten-2 white-text">
                        <th>Nom du produit</th>
                        <th>Quantité</th>
                        <th>Prix unitaire (€)</th>
                        <th>prix HT (€)</th>
                        <th>prix TTC (€)</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products%}
                        <tr>
                            <td>{{ product.name }}</td>
                            <td>{{ product.quantity }}</td>
                            <td>{{ product.price }}</td>
                            <td>{{ product.totalProduct }}</td>
                            <td>{{ product.totalProductTaxed }}</td>
                        </tr>
                    {% endfor %}
                    <tr class="teal lighten-2 white-text">
                        <td><b>TOTAL : </b></td>
                        <td colspan="2"></td>
                        <td><b>{{ totalBasket }}</b></td>
                        <td><b>{{ totalBasketTaxed }}</b></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
{% endblock %}
